<%- include('partials_header', { title: 'Cadastro' }) %>
<section class="section">
  <div class="container">
    <div class="admin-header">
      <div>
        <h1>Cadastro</h1>
        <p class="muted"><%= profile.email || profile.id %></p>
      </div>
      <div class="admin-actions">
        <a class="btn ghost" href="/admin/profiles">Voltar</a>
        <span class="muted">Seu n√≠vel: <%= adminRole %></span>
      </div>
    </div>

    <div class="card">
      <div class="grid-2">
        <div>
          <p><strong>Email:</strong> <%= profile.email || '-' %></p>
          <p><strong>Provider:</strong> <%= profile.provider || '-' %></p>
          <p><strong>Cadastro:</strong> <%= profile.created_at ? new Date(profile.created_at).toLocaleString('pt-BR', { timeZone: 'America/Sao_Paulo' }) : '-' %></p>
        </div>
        <div>
          <p><strong>IP:</strong> <%= profile.ip || '-' %></p>
          <p><strong>User agent:</strong> <%= profile.user_agent || '-' %></p>
          <p><strong>Profile ID:</strong> <%= profile.profile_id || '-' %></p>
        </div>
      </div>
    </div>
  </div>
</section>
<%- include('partials_footer') %>
